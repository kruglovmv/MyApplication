                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_height_textView"
                android:layout_marginStart="@dimen/layout_marginStart_button"
                android:layout_marginTop="@dimen/layout_marginEnd_button"
                android:layout_marginEnd="@dimen/layout_marginStart_button"
                android:layout_marginBottom="@dimen/layout_marginEnd_button"
                android:background="@android:drawable/screen_background_dark_transparent"
